<div class="spec-grid">
    <!-- 엔진 -->
    <div class="spec-card engine">
        <div class="spec-card-header">
            <span class="spec-icon"></span>엔진
        </div>
        <table>
            <tbody>
                <tr>
                    <th>엔진형식</th>
                    <td><%= carInfoDetail.engineType %></td>
                </tr>
                <tr>
                    <th>과급방식</th>
                    <td><%= carInfoDetail.aspiration %></td>
                </tr>
                <tr>
                    <th>배기량</th>
                    <td><%= carInfoDetail.displacement %></td>
                </tr>
                <tr>
                    <th>연료</th>
                    <td><%= carInfoDetail.fuelType %></td>
                </tr>
                <tr>
                    <th>최고출력</th>
                    <td><%= carInfoDetail.maxPower %>hp</td>
                </tr>
                <tr>
                    <th>최대토크</th>
                    <td><%= carInfoDetail.maxTorque %>kg.m</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- 성능 -->
    <div class="spec-card performance">
        <div class="spec-card-header">
            <span class="spec-icon"></span>성능
        </div>
        <table>
            <tbody>
                <tr>
                    <th>연비</th>
                    <td><%= carInfoDetail.fuelEfficiency %>km/L</td>
                </tr>
                <tr>
                    <th>CO2 배출량</th>
                    <td><%= carInfoDetail.co2Emission %>g/km</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- 치수 -->
    <div class="spec-card dimension">
        <div class="spec-card-header">
            <span class="spec-icon"></span>치수
        </div>
        <table>
            <tbody>
                <tr>
                    <th>전장/전폭</th>
                    <td><%= carInfoDetail.length %>mm / <%= carInfoDetail.width %>mm</td>
                </tr>
                <tr>
                    <th>전고/축거</th>
                    <td><%= carInfoDetail.heigth %>mm / <%= carInfoDetail.wheelbase %>mm</td>
                </tr>
                <tr>
                    <th>윤거전/후</th>
                    <td><%= carInfoDetail.frontTread %>mm / <%= carInfoDetail.rearTread %>mm</td>
                </tr>
                <tr>
                    <th>공차중량</th>
                    <td><%= carInfoDetail.curbWeight %>kg</td>
                </tr>
                <tr>
                    <th>전륜타이어</th>
                    <td><%= carInfoDetail.fontTire %></td>
                </tr>
                <tr>
                    <th>후륜타이어</th>
                    <td><%= carInfoDetail.rearTire %></td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- 섀시 -->
    <div class="spec-card chassis">
        <div class="spec-card-header">
            <span class="spec-icon"></span>섀시
        </div>
        <table>
            <tbody>
                <tr>
                    <th>구동방식</th>
                    <td><%= carInfoDetail.drivetrain %></td>
                </tr>
                <tr>
                    <th>변속기</th>
                    <td><%= carInfoDetail.transmission %></td>
                </tr>
                <tr>
                    <th>전륜 서스펜션</th>
                    <td><%= carInfoDetail.frontSuspension %></td>
                </tr>
                <tr>
                    <th>후륜 서스펜션</th>
                    <td><%= carInfoDetail.rearSuspension %></td>
                </tr>
                <tr>
                    <th>전륜 제동장치</th>
                    <td><%= carInfoDetail.frontBreake %></td>
                </tr>
                <tr>
                    <th>후륜 제동장치</th>
                    <td><%= carInfoDetail.rearBreake %></td>
                </tr>
                <tr>
                    <th>스티어링</th>
                    <td><%= carInfoDetail.steeringType %></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
