<html lang="ko">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/svg+xml" href="/svg/favicon.svg">
    <link rel="preconnect" href="https://cdn.jsdelivr.net">
    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/static/pretendard.min.css">
    <link rel="stylesheet" type="text/css" href="/css/common.css">
    <link rel="stylesheet" type="text/css" href="/css/notification.css">
    <script src="/js/jquery-3.6.0.js"></script>
    <script defer src="/js/common.js"></script>
    <script defer src="/js/notification.js"></script>
    <title>알림 : 카피디아</title>
</head>

<body>
    <%- include('./includes/header') %>
    <main>
        <div class="notification-container">
            <div class="notification-header">
                <h1>알림</h1>
                <button type="button" class="read-all-btn">모두 읽음</button>
            </div>
            <div class="notification-list">
                <% if (notificationList && notificationList.length > 0) { %>
                    <% notificationList.forEach((noti) => { %>
                        <a href="/notification/<%= noti.notificationSeq %>/read?referenceSeq=<%= noti.referenceSeq %>"
                           class="notification-item<%= noti.isRead ? '' : ' unread' %>">
                            <div class="notification-content">
                                <span class="notification-type-badge">
                                    <%= noti.type === 'comment' ? '댓글' : noti.type === 'reply' ? '답글' : '좋아요' %>
                                </span>
                                <p class="notification-text"><%= noti.content %></p>
                            </div>
                            <span class="notification-date"><%= new Date(noti.createAt).toLocaleDateString('ko-KR') %></span>
                        </a>
                    <% }) %>
                <% } else { %>
                    <div class="no-notifications">
                        <p>알림이 없습니다.</p>
                    </div>
                <% } %>
            </div>
            <% if (totalPages > 1) { %>
                <div class="pagination">
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <button class="page-btn <%= i === currentPage ? 'active' : '' %>" data-page="<%= i %>"><%= i %></button>
                    <% } %>
                </div>
            <% } %>
        </div>
    </main>
</body>

</html>
